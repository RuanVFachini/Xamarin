<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFormsApp.Tabuada"
             Title="Tabuada">
    <ContentPage.Content>
        <StackLayout Margin="10,0">
            <Label 
                Text="Tabuada"
                VerticalOptions="Start" 
                HorizontalOptions="Center" 
                FontSize="Title"/>
            <Entry x:Name="etrNumero" Keyboard="Numeric" Placeholder="Informe o número que deseja" HorizontalTextAlignment="End"/>
            <Button x:Name="btnExecutar" Text="Calcular" Clicked="BtnExecutar_Clicked"/>
            <ListView x:Name="lvwResults"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>